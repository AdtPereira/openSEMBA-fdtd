{
  "_format": "Semba Data File in JSON format",
  "_version": "0.16",

  "FiniteDifferenceModel": {

    "grid": {
      "gridType": "gridCondition",
      "type": "Number_of_cells",
      "numberOfCells": "{10 10 10}",
      "layerBox": "{10.0 10.0 10.0 0.0 0.0 0.0}"
    },

    "materials": [
      {
        "materialId": 1,
        "name": "PEC",
        "materialType": "PEC"
      },
      {
        "materialId": 2,
        "name": "ClassicMaterialName",
        "materialType": "Classic",
        "permittivity": 1.0,
        "permeability": 2.0,
        "electricConductivity": 3.0,
        "magneticPermeability": 4.0
      }
    ],

    "layers": [
      { "id": 1, "name": "object" }
    ],

    "elements": [
      {
        "id": 1,
        "materialId": 1,
        "layerId": 1,
        "surfels": [
          [ 2, 2, 2, "x+" ],
          [ 3, 2, 2, "x+" ]
        ]
      },
      {
        "id": 3,
        "materialId": 1,
        "layerId": 1,
        "voxels": [
          [ 2, 2, 2 ],
          [ 3, 2, 2 ]
        ]
      },
      {
        "id": 2,
        "materialId": 1,
        "layerId": 1,
        "voxelRegions": [
          [
            [ 2, 2, 2 ],
            [ 10, 10, 10 ]
          ],
          [
            [ 10, 10, 2 ],
            [ 10, 10, 2 ]
          ]
        ]
      }
    ],

    "boundary": {
      "lower": [ "PML", "PEC", "PMC" ],
      "upper": [ "MUR1", "MUR2", "Periodic" ]
    }
  },

  "sources": [
    {
      "sourceType": "planewave",
      "definitionMode": "by_vectors",
      "directionVector": "{0.0 0.0 1.0}",
      "polarizationVector": "{1.0 0.0 0.0}",
      "magnitude": {
        "type": "File",
        "filename": "gaussianWaveform.exc"
      },
      "voxelRegion": [
        [ 2, 2, 2 ],
        [ 10, 10, 10 ]
      ]
    }
  ],

  "probes": [
    {
      "gidOutputType": "OutRq_on_point",
      "name": "Point probe",
      "type": "electricField",
      "domain": {
        "initialTime": 0.0,
        "finalTime": 1e-08,
        "samplingPeriod": 2.5e-09
      },
      "pixels": [ 3, 3, 3 ]
    }
  ]
}